<% @title=params[:id] %>
<hr class='top'>
<div class="row column">
	<div class="large-12 columns">
<h4 style="margin: 0;" class="text-center">OPPORTUNITY DESCRIPTION</h4>
</div>
</div>
<hr class='bottom'>

<div class="row">
	<%@hit.impressionist_count(:start_date=>Date.today-7.days)%>
		<% page=params[:id] %>
		<% @jobs.each do |message| %> 

			<% if page==message.url %>
			<% textdat = message.tagline.to_s %>
				<div class="large-6 columns">
					<%=image_tag(message.photo.url, alt: "See a Careers Consultant", width:"100%")%>
				</div>
				<div class="large-6 columns">
					<h5><a class='OT'> <p><%= message.name %></p> </a></h5>
					<p>
						<span><i class="fi-torso"> <%= message.tagline %> &nbsp;&nbsp;</i></span>
						<span><i class="fi-calendar"> <p class="time">Opportunity added on: <%= message.release.to_date.strftime("%d/%m/%Y") %>. Deadline: <%= message.expiry.to_date.strftime("%d/%m/%Y") %></p>  &nbsp;&nbsp;</i></span>
						<span><%= social_share_button_tag(message.name) %></span>
					</p>
					<p class="content"><%= message.content %></p> 
				</div>
			<% end %>
		<% end %>
</div>
<br>


